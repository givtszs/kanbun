<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_primary"
    android:paddingStart="@dimen/drawer_padding_start"
    android:paddingBottom="@dimen/drawer_header_padding_bottom">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="@dimen/drawer_user_profile_picture_dimens"
        android:layout_height="@dimen/drawer_user_profile_picture_dimens"
        android:layout_marginTop="@dimen/drawer_user_profile_picture_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.ImageView.Circle"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        style="?textAppearanceTitleMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/drawer_user_initials_padding_vertical"
        android:layout_marginBottom="@dimen/drawer_user_initials_divider"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        app:layout_constraintBottom_toTopOf="@id/tvTag"
        app:layout_constraintEnd_toEndOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="@id/ivProfilePicture"
        app:layout_constraintTop_toBottomOf="@id/ivProfilePicture"
        tools:text="Some Name" />

    <TextView
        android:id="@+id/tvTag"
        style="?textAppearanceSubtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/drawer_user_initials_divider"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tvEmail"
        app:layout_constraintEnd_toEndOf="@id/tvEmail"
        app:layout_constraintStart_toStartOf="@id/ivProfilePicture"
        tools:text="\@user_2931" />

    <TextView
        android:id="@+id/tvEmail"
        style="?attr/textAppearanceSubtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="@dimen/drawer_user_initials_padding_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSignOut"
        app:layout_constraintStart_toStartOf="@id/tvName"
        tools:text="some.email@mail.co" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/drawer_header_icon_padding_end"
        app:icon="@drawable/ic_settings_outlined_24"
        app:iconSize="24dp"
        app:iconTint="@color/icon_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_outlined_24" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignOut"
        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/drawer_header_icon_padding_end"
        app:icon="@drawable/ic_sign_out_outlined_24"
        app:iconSize="24dp"
        app:iconTint="@color/icon_black"
        app:layout_constraintBaseline_toBaselineOf="@id/tvEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_settings_outlined_24" />
</androidx.constraintlayout.widget.ConstraintLayout>