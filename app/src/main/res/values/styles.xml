<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ImageViewSlightRounding" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.ImageView.MediumRounding" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="BottomSheetDialog.Option.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/platinum</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="MaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurfaceContainerHigh">@color/background_primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialDialog.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialDialog.Button.Negative</item>
    </style>

    <style name="MaterialDialog.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
    </style>

    <style name="MaterialDialog.Button.Positive" parent="Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetLeft">10dp</item>
    </style>

    <style name="MaterialDialog.Button.Negative" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/border_primary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextInputLayout.Outlined.Dense" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
    </style>

    <style name="MaterialToolbar" parent="Widget.Material3.Toolbar">
        <item name="backgroundColor">@color/background_light</item>
    </style>

    <style name="TaskList.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Task.Material.CardView" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">@color/border_primary</item>
        <item name="shapeAppearance">@style/Task.Material.CardView.ShapeAppearance.Corner</item>
        <item name="cardBackgroundColor">@color/background_primary</item>
    </style>

    <style name="Task.Material.CardView.ShapeAppearance.Corner" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
    </style>
</resources>